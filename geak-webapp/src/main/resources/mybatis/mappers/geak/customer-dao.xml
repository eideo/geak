<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.xsocket.geak.dao.CustomerDao">

  <cache />

  <resultMap id="result" type="com.github.xsocket.geak.entity.Customer">
    <id     property="id"        column="id"        javaType="Integer" jdbcType="INTEGER" />
    <result property="name"      column="name"      javaType="String"  jdbcType="VARCHAR" />
    <result property="sex"       column="sex"       javaType="String"  jdbcType="CHAR" />
    <result property="telephone" column="telephone" javaType="String"  jdbcType="VARCHAR" />
  </resultMap>

  <select id="selectById" resultMap="com.github.xsocket.geak.dao.CustomerDao.result" 
    flushCache="false" useCache="true">
    SELECT id, name, sex, telephone
    FROM geak_customer 
    WHERE 
      id = #{id,javaType=Integer,jdbcType=INTEGER}
  </select>
  
  <select id="selectByTelephone" resultMap="com.github.xsocket.geak.dao.CustomerDao.result" 
    flushCache="false" useCache="true">
    SELECT id, name, sex, telephone
    FROM geak_customer 
    WHERE 
      telephone = #{telephone,javaType=String,jdbcType=VARCHAR}
  </select>

  <insert id="insert" flushCache="true" useGeneratedKeys="true" keyProperty="id">
    INSERT INTO geak_customer 
      (name, sex, telephone) 
    VALUES 
      (#{name,jdbcType=VARCHAR}, #{sex,jdbcType=CHAR}, #{telephone,jdbcType=VARCHAR})
  </insert>
  
  <update id="update" flushCache="true">
    UPDATE geak_customer 
    <set>
      <if test="name != null">name = #{name,jdbcType=VARCHAR},</if>
      <if test="sex != null">sex = #{sex,jdbcType=CHAR},</if>
      <if test="telephone != null">telephone = #{telephone,jdbcType=VARCHAR},</if>
    </set>
    WHERE 
      id = #{id,jdbcType=Integer,jdbcType=INTEGER}
  </update>
  
  <delete id="delete" flushCache="true">
    DELETE FROM geak_customer
    WHERE 
      id = #{id,javaType=Integer,jdbcType=INTEGER}
  </delete>

</mapper>