<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.xsocket.geak.dao.OrderPromotionDao">

  <resultMap id="result" type="com.github.xsocket.geak.entity.OrderPromotion">
    <result property="count"     column="count"          javaType="Integer" jdbcType="INTEGER" />
    <result property="plan.id"   column="promotion_id"   javaType="Integer" jdbcType="INTEGER" />
    <result property="plan.name" column="promotion_name" javaType="String"  jdbcType="VARCHAR" />
  </resultMap>

  <!-- 查询订单关联促销信息 -->
  <select id="selectOrderPromotions" resultMap="com.github.xsocket.geak.dao.OrderPromotionDao.result">
    SELECT op.count, op.promotion_id, pp.name as promotion_name
    FROM geak_order_promotion op
    JOIN geak_promotion_plan pp ON op.promotion_id = pp.id
    WHERE op.order_id = #{id,javaType=Integer,jdbcType=INTEGER}
  </select>
</mapper>