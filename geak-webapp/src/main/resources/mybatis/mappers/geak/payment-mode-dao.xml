<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.xsocket.geak.dao.PaymentModeDao">

  <cache />

  <resultMap id="result" type="com.github.xsocket.geak.entity.PaymentMode">
    <id     property="id"        column="id"        javaType="Integer" jdbcType="INTEGER" />
    <result property="name"      column="name"      javaType="String"  jdbcType="VARCHAR" />
    <result property="price"     column="price"     javaType="Integer" jdbcType="INTEGER" />
  </resultMap>

  <select id="selectById" resultMap="com.github.xsocket.geak.dao.PaymentModeDao.result" 
    flushCache="false" useCache="true">
    SELECT id, name, price
    FROM geak_payment_mode 
    WHERE 
      id = #{id,javaType=Integer,jdbcType=INTEGER}
  </select>
  
  <select id="selectAll" resultMap="com.github.xsocket.geak.dao.PaymentModeDao.result" 
    flushCache="false" useCache="true">
    SELECT id, name, price
    FROM geak_payment_mode
  </select>

